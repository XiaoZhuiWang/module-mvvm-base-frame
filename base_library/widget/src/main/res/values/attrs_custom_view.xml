<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">
    <!--自定义View的属性放在这里，属性名不需要加前缀-->

    <declare-styleable name="TitleBar">
        <attr name="title_text" format="reference|string" />
        <attr name="title_text_size" format="reference|dimension" />
        <attr name="title_text_color" format="reference|color" />
        <attr name="sub_title_text" format="reference|string" />
        <attr name="sub_title_text_size" format="reference|dimension" />
        <attr name="sub_title_text_color" format="reference|color" />
        <attr name="menu_text_size" format="reference|dimension" />
        <attr name="menu_text_color" format="reference|color" />
        <attr name="menu_margin" format="reference|dimension" />
    </declare-styleable>
    
</resources>