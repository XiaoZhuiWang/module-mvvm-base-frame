<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">
    <!--自定义View的属性放在这里，属性名不需要加前缀-->

    <declare-styleable name="TitleBar">
        <attr name="title_text" format="reference|string" />
        <attr name="title_text_size" format="reference|dimension" />
        <attr name="title_text_color" format="reference|color" />
        <attr name="sub_title_text" format="reference|string" />
        <attr name="sub_title_text_size" format="reference|dimension" />
        <attr name="sub_title_text_color" format="reference|color" />
        <attr name="menu_text_size" format="reference|dimension" />
        <attr name="menu_text_color" format="reference|color" />
        <attr name="menu_margin" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>
    
</resources>